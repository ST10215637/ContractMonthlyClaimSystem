<Window x:Class="ContractMonthlyClaimSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractMonthlyClaimSystem"
        mc:Ignorable="d"
        Title="Contract Monthly Claim System" Height="450" Width="450">
    <Grid>
        <Label Content="Total Hours" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="txtTotalHours" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,10,0,0" Width="100"/>

       
        <Label Content="Hourly Rate" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox Name="txtHourlyRate" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,40,0,0" Width="100"/>

        
        <Label Content="Claim Description" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox Name="txtClaimDescription" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,70,0,0" Width="200" Height="60" 
                 TextWrapping="Wrap" AcceptsReturn="True"/>

       
        <Button Content="Submit Claim" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,140,0,0" Width="100" Click="SubmitClaim_Click"/>
    </Grid>
</Window>
